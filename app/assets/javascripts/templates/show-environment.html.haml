          %option{value: '10'} 10am
          %option{value: '11'} 11am
          %option{value: '12'} Midday
          %option{value: '13'} 1pm
          %option{value: '13'} 2pm
          %option{value: '13'} 3pm
          %option{value: '13'} 4pm
          %option{value: '13'} 5pm
          %option{value: '13'} 6pm
          %option{value: '13'} 7pm
          %option{value: '13'} 8pm
          %option{value: '13'} 9pm
          %option{value: '13'} 10pm
          %option{value: '13'} 11pm
        %select{id: 'stop-at-minute'}
          %option{value: '00'} 00
          %option{value: '15'} 15
          %option{value: '30'} 30
          %option{value: '45'} 45
      %dt Start at
      %dd
        %select{id: 'start-at-hour'}
          %option{value: '00'} Midnight
          %option{value: '01'} 1am
