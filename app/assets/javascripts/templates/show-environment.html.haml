%div.modal-header
    %h3 Environment Details
%div.modal-body
    %div{id: "loading-" + random, class: 'environment-loading'}
    %dl.hidden
        %dt Name
        %dd.name
        %dt Description
        %dd.description
        %dt Status
        %dd.status
        %dt Resources
        %dd.resources
            %ul
      %h3 EC2 Timer
      %dt Enabled
      %dd
        %input{type: 'checkbox'}
      %dt Stop at
      %dd
        %select{id: 'stop-at-hour'}
          %option{value: '00'} Midnight
          %option{value: '01'} 1am
          %option{value: '02'} 2am
          %option{value: '03'} 3am
